<!-- app/templates/contact.hbs -->
<div class="jumbotron text-center">
    <h1>Contact Dustin</h1>

    <br/><br/>

    <p>Send me a message and I'll get back to you as soon as possable.</p>

    <br/><br/>

    <div class="form-horizontal form-group form-group-lg row">

      <div class="col-xs-11 col-xs-offset-1 col-sm-4 col-sm-offset-1 col-md-3 col-md-offset-2">
        <p class="my-lable">Email Address:</p>
      </div>
      <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-0 col-md-5">
        {{input type="email" value=emailAddress class="form-control" placeholder="Please type your e-mail address." autofocus="autofocus"}}
      </div>

    </div>
    <div class="form-horizontal form-group form-group-lg row">

      <div class="col-xs-10 col-xs-offset-1 col-sm-4 col-sm-offset-1 col-md-3 col-md-offset-2">
        <p class="my-lable">Message:</p>
      </div>
      <div class="col-xs-10 col-xs-offset-1 col-sm-offset-0 col-sm-6 col-md-5">
        {{input value=message class="form-control" placeholder="Please type your message here."}}
      </div>

    </div>
    <div class="form-horizontal form-group form-group-lg row">

      <div class="col-xs-10 col-xs-offset-4">
        <button class="btn btn-success" {{action 'saveMessage'}} disabled={{isDisabled}}>Send message</button>
      </div>

    </div>

    {{#if responseMessage}}
      <div class="alert alert-success">{{responseMessage}}</div>
    {{/if}}


    <br/><br/>

</div>
